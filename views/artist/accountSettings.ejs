<style>
  .main-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: auto;
    margin-top: 0px;
    width: 90%;
    height: 75%;
  }

  h1 {
    text-align: left;
    text-transform: capitalize;
    font-size: 45px;
    font-weight: 300;
    letter-spacing: 6px;
    margin-bottom: 1rem;
    margin-top: 1rem;
    padding-left: 5%;
    color: rgb(45, 66, 97);
  }

  small {
    padding-left: 5%;
    color: grey;
  }

  .settings-nav {
    border-radius: 4px 0px 0px 4px;
    height: 90%;
    width: 20%;
    background-color: rgb(13, 110, 253);
    padding-top: 2rem;
    padding-left: 1rem;
  }

  ul {
    padding: 0;
    list-style: none;
  }

  ul a {
    color: white;
    text-decoration: none;
  }

  .settings-nav hr {
    color: white;
    width: 90%;
  }

  .settings-detail {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    border-radius: 0px 4px 4px 0px;
    height: 90%;
    width: 80%;
    padding: 2rem;
    background-color: white;
  }

  button {
    width: 20%;
    margin-top: 0%;
  }

  #changePass {
    margin-top: 0%;
  }

  @media screen and (max-width: 728px) {
    h1 {
      display: none;
    }

    small {
      padding-left: 5%;
      margin-bottom: 0px;
      color: rgb(106, 121, 136);
      font-size: 10px;
      text-align: center;
      padding-bottom: 1rem;
    }

    .main-container {
      width: 90%;
      height: 82%;
      flex-direction: column;
    }

    .settings-nav {
      width: 80%;
      height: 20%;
      padding: 1rem 0 0 1rem;
    }

    ul a {
      font-weight: 300;
      color: white;
      text-decoration: none;
      font-size: 16px;
    }

    button {
      width: 40%;
      margin-top: 0%;
      font-size: 7px;
    }

    #changePass {
      margin-left: 25%;
      padding: 5px 16px 5px 16px;
      font-size: 10px;
      font-weight: 500;
    }

    #changeEmail {
      margin-left: 25%;
      padding: 5px 16px 5px 16px;
      font-size: 10px;
      font-weight: 500;
      margin-top: 4px;

    }
  }

  @media screen and (max-width: 600px) {
    h1 {
      display: none;
    }

    small {
      font-size: 10px;
      text-align: center;
      padding-bottom: 1rem;
    }

    .main-container {
      width: 80%;
      height: 82%;
      flex-direction: column;
    }

    /* .settings-detail{
        width: 90%;
    } */

    .settings-detail {
      padding: 2rem;
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      border-radius: 0px 4px 4px 0px;
      height: 90%;
      width: 80%;
      background-color: white;
    }

    .settings-detail h3,
    h5 {
      margin: 0px;
      padding: 0px;
      color: rgb(45, 66, 97);
    }

    button {
      width: 20%;
      margin-top: 0%;
    }

    .btn-primary:hover,
    .btn-outline-primary:hover {
      box-shadow: 0px 0px 11px rgba(13, 110, 253, 0.6);
    }

    .settings-nav {
      width: 80%;
      height: 20%;
      padding: 1rem 0 0 1rem;
    }

    ul a {
      color: white;
      text-decoration: none;
      font-size: 13px;
      font-weight: 500;
    }

    button {
      width: 40%;
      margin-top: 0%;
      font-size: 7px;
    }

    h5 {
      margin-top: -5%;
    }

    #changePass {
      margin-left: 25%;
      padding: 5px 16px 5px 16px;
      font-size: 10px;
      font-weight: 500;
    }

    #changeEmail {
      margin-left: 25%;
      padding: 5px 16px 5px 16px;
      font-size: 10px;
      font-weight: 500;
      margin-top: 4px;
    }
  }
</style>

<h1>Account Settings</h1>
<small>Change your profile & account settings </small>
<div class="main-container">
  <div class="settings-nav">
    <ul>
      <li><a href="/profile/settings/account">Account Info</a></li>
      <hr />
      <li><a href="/profile/settings/profile">Profile</a></li>
    </ul>
  </div>

  <div class="settings-detail">
    <h3>Account Settings</h3>
    <hr>

    <h5>Email:</h5>
    <input class="form-control" type="text" placeholder="<%=artist.email%>" readonly>
    <br>

    <button onclick="location.href = '/profile/settings/account/changeEmail'" class="btn btn-primary"
      type="submit">Change Email</button>
    <button style="margin-top: 0;" onclick="location.href = '/profile/settings/account/changePassword'"
      style="margin-top: 20%;" class="btn btn-outline-primary" type="submit">Change Password</button>

  </div>
</div>