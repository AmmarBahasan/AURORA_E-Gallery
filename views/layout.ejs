<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous" />
  <title>E-Gallery</title>
  <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');

    html,
    body {
      height: 100%;
      margin: 0px;
      padding: 0px;
      font-family: 'Roboto', sans-serif;
      background-color: rgb(240, 241, 245);
    }

    nav {
      padding: 0px 20px;
    }

    .navbar {
      background-color: white;
      border-bottom: 1px rgb(211, 211, 211, 0.7) solid;
      z-index: 2;
    }

    .nav-right :not(:last-child) {
      margin: 25px;
    }

    .nav-right a:hover {
      color: rgb(13, 110, 253);
    }

    footer {
      flex-shrink: 0;
      padding: 15px;
      background-color: white;
      text-align: center;
      z-index: 2;
    }

    .blockquote-footer {
      margin-bottom: 0rem;
    }

    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .content {
      flex: 1 0 auto;
      margin-top: auto;
    }

    @media screen and (max-width: 570px) {
      .nav-right :not(:last-child) {
        margin: 3px;
      }
    }

    @media screen and (max-width: 439px) {
      .nav-right :not(:last-child) {
        margin: 2px;
      }
    }

    a {
      text-decoration: none;
    }

    .nav-right a {
      color: rgb(106, 121, 136);
    }
  </style>
</head>



<body>

  <%if(alerts.success){ %>
    <%alerts.success.forEach(function(msg){ %>
      <div class="alert alert-success">
        <%= msg %>
      </div>
      <% }) %>
        <% } %>

          <% if(alerts.validationErrors) { %>
            <% alerts.validationErrors.forEach(function(msg){ %>
              <div class="alert alert-danger">
                Your <%= msg.msg %>
              </div>
              <% }) %>
                <% } %>

                  <nav class="navbar navbar-light">
                    <div class="nav-left">
                      <a class="nav-item navbar-brand" style="color: rgb(13, 110, 253);" href="/">AURORA</a>
                    </div>

                    <div class="nav-right">
                      <a href="/gallery">Gallery</a>
                      <a href="/artists">Artists</a>
                      <a href="/exhibitions">Exhibitions</a>


                      <% if(currentUser) { %>
                        <a href="/myExhibitions">My Exhibitions</a>
                        <a href="/profile">Profile</a>
                        <a href="/signout">Sign Out</a>
                        <% } else { %>
                          <a href="/signup">Create Account</a>
                          <a href="/signin">Sign In</a>
                          <% } %>
                    </div>
                  </nav>
                  <div class="content">
                    <%- body%>
                  </div>
                  <footer class="blockquote-footer">
                    Developed by Ammar, Haneen & Raghad
                  </footer>

                  <script src="https://code.jquery.com/jquery-3.6.0.min.js"
                    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>



                  <script src="../js/main.js"></script>

                  <script
                    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAomPEleZRC8ZljfjKkzpEP5NIhBDeLkGs&callback=initMap&libraries=&v=weekly"
                    async></script>


</body>

</html>