<style>
    .gallery-main {
        margin: 0 auto;
        width: 95%;
    }

    .gallery-head h1 {
        margin-top: 2rem;
        text-align: center;
        text-transform: uppercase;
        font-size: 45px;
        font-weight: 300;
        letter-spacing: 6px;
        margin-bottom: 5%;
        color: rgb(45, 66, 97);
    }

    .gallery-body {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    .art-card {
        height: 30rem;
        width: 25rem;
        text-align: center;
        transition: box-shadow .3s;
        margin-bottom: 2rem;
        margin-left: 1rem;
        margin-right: 1rem;
        border: none;
    }

    .art-card:hover {
        cursor: pointer;
        box-shadow: 0 0 11px rgba(33, 33, 33, .2);
    }

    .image-size {
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100%;
        width: 100%;
        overflow: hidden;
        border-radius: 4px 4px 0px 0px;
    }

    .card-title {
        color: rgb(106, 121, 136);
        font-weight: 300;
    }
</style>

<div class="gallery-main">

    <div class="gallery-head">
        <h1>Gallery</h1>
    </div>

    <div class="gallery-body">
        <% art.forEach(piece=> { %>

            <div class="art-card  card" onclick="location.href = '/gallery/artPiece/<%=piece._id %>' ">

                <div class="image-size" style="background-image: url(<%=piece.image%>)">
                </div>

                <div class="card-body">
                    <h3 class="card-title">
                        <%= piece.name%>
                    </h3>
                </div>

            </div>

            <% }); %>
    </div>

</div>