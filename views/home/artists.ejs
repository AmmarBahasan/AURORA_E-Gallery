<style>
  h1 {
    margin-top: 2rem;
    text-align: center;
    text-transform: uppercase;
    font-size: 45px;
    font-weight: 300;
    letter-spacing: 6px;
    margin-bottom: 5%;
    color: rgb(45, 66, 97);
  }

  .container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
  }

  .image-size {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 4px 4px 0px 0px;
    height: 250px;
    width: 250px;
    border-radius: 50%;
    margin-left: -0.5%;
    margin-top: -46%;
  }

  .container>* {
    margin: 80px;
  }

  .card {
    background-color: transparent;
    border: none;
    width: 15.5rem;
    height: 17rem;
    animation: drop 1s ease;
  }

  .card-body {
    text-align: center;
    padding-top: 3rem;
  }

  .card-body h5 {
    color: rgb(45, 66, 97);
    font-weight: 300;
    margin-bottom: 20px;
  }

  .card-body a {
    background-color: whitesmoke;
    border: 1px solid rgb(13, 110, 253);
    border-radius: 4px;
    padding: 5px 8px;
    font-weight: 400;
    transition: 0.3s;
  }

  .card-body a:hover {
    background-color: rgb(13, 110, 253);
    border: 1px solid rgb(13, 110, 253);
    color: white;
    box-shadow: 0px 0px 8px rgba(13, 110, 253, 0.6);
  }

  @keyframes drop {
    0% {
      opacity: 0;
      transform: translateY(-80px);
    }

    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 420px) {
    .card {
      width: 18rem;
      height: 20rem;
    }

    .image-size {
      height: 230px;
      width: 230px;
      margin-left: 2.3px;
      margin-top: -70px;
    }
  }
</style>

<h1 style="text-align: center; text-transform: uppercase; margin-bottom: 80px">
  Our artists
</h1>

<section class="container">
  <% artists.forEach(artist=> { %>

    <div class="card">
      <div class="image-size" style="background-image: url(<%=artist.image%>);">
      </div>

      <div class="card-body">
        <h5 class="card-title">
          <%= artist.firstName + " " +artist.lastName%>
        </h5>
        <a href="/artists/artist/<%=artist._id %>">View Art</a>
      </div>
    </div>
    <% })%>
</section>